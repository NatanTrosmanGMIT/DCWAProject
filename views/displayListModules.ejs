<style>
  th {
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    box-shadow: 2px 2px 2px 2px rgba(0,0,0,0.1);
    border: 1px solid black;
    text-align: center;
  }

   td {
      padding: 10px 0;
      color: #2b2b2b;
        content: attr(data-label);
        flex-basis: 50%;
        text-align: right;
        border: 1px solid black;
        box-shadow: 2px 2px 2px 2px rgba(0,0,0,0.1);
        text-align: center;
    }
  </style>
<table>
    <tr>
        <th>MID</th>
        <th>Name</th>
        <th>Credits</th>
        <th>Update</th>
        <th>Students</th>
    </tr>
    <% modules.forEach((module)=> { %>
        <tr>
            <td><%= module.mid %> </td>
            <td><%= module.name %></td>
            <td><%= module.credits %></td>
            <td><a href="<%= `/updateModule/${module.mid}` %>">Update</a></td>
            <td><a href="<%= `/module/students/${module.mid}` %>">Students</a></td>
        </tr>
        <% }) %>
</table>
<br/>
<a href="/">Home</a>
